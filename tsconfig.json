{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./.build",
    "moduleResolution": "node",
    "lib": ["es2020", "esnext"],
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./tests", "./ops", "./node_modules"]
}
